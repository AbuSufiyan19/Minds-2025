    <script>
        function applyVantaBackground() {
            const element = document.querySelector('.vanta-bg-event');

            if (window.innerWidth > 600) {
                VANTA.WAVES({
                    el: ".vanta-bg-event",
                    mouseControls: true,
                    touchControls: true,
                    gyroControls: true,
                    minHeight: 200.00,
                    minWidth: 200.00,
                    scale: 1.00,
                    scaleMobile: 1.00,
                    color: 0x50519,
                    shininess: 15.00,
                    waveHeight: 20.00,
                    waveSpeed: 0.30,
                    zoom: 0.6
                });
            } else {
                element.classList.remove('vanta-bg-event');
            }
        }

        window.onload = applyVantaBackground;
        window.onresize = applyVantaBackground;

