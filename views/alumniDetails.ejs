<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Alumni Details</title>
    <link rel="stylesheet" href="./css/navBar.css" />
    <link rel="stylesheet" href="./css/alumniDetails.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/0d2dab4ce0.js" crossorigin="anonymous"></script>
    <link
      rel="shortcut icon"
      href="/images/loginPrimaryLogo.png"
      type="image/x-icon"
    />
  </head>
  <body>
    <%- include('navbaralumni') %>
    <section>
      <div class="container">
        <h1>Alumni Details</h1>
        <div class="search-container">
          <input type="text"
          id="searchBox"
          placeholder="Enter Roll Number"
          onkeyup="filterTable()"
        />
        <i class="fa-solid fa-magnifying-glass"></i>
        </div>
        

        <table>
          <thead>
            <tr>
              <th>Serial No.</th>
              <th>Name</th>
              <th>Roll Number</th>
              <th>Stream</th>
            </tr>
          </thead>
          <tbody id="alumniTable">
            <% alumni.forEach(function(alumnus, index) { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= alumnus.alumnusName %></td>
              <td class="roll-number"><%= alumnus.rollNumber %></td>
              <td><%= alumnus.stream %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <div class="sssss">
        <script
          src="https://unpkg.com/@dotlottie/player-component@latest/dist/dotlottie-player.mjs"
          type="module"
        ></script>
        <dotlottie-player
          src="https://lottie.host/6e51615a-1dfc-4f93-8116-080eaf72e11c/u2KIWLi7L6.json"
          background="transparent"
          speed="1"
          style="width: 100%; height: 100%"
          direction="1"
          playMode="normal"
          loop
          autoplay
        ></dotlottie-player>
      </div>
    </section>

    <script>
      function filterTable() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("searchBox");
        filter = input.value.toUpperCase();
        table = document.getElementById("alumniTable");
        tr = table.getElementsByTagName("tr");

        for (i = 0; i < tr.length; i++) {
          td = tr[i].getElementsByClassName("roll-number")[0];
          if (td) {
            txtValue = td.textContent || td.innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
              tr[i].style.display = "";
            } else {
              tr[i].style.display = "none";
            }
          }
        }
      }
    </script>
  </body>
</html>
